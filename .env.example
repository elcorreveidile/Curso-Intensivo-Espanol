# ========================================
# MONGODB CONFIGURATION
# ========================================

# MongoDB Atlas Connection String (Recommended for production)
# Get this from: https://cloud.mongodb.com
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>
MONGO_URI=mongodb+srv://user:password@cluster.mongodb.net/curso_intensivo_espanol?retryWrites=true&w=majority

# OR for local MongoDB:
# MONGO_URI=mongodb://localhost:27017/

# Database Name
DB_NAME=curso_intensivo_espanol

# ========================================
# JWT AUTHENTICATION
# ========================================

# JWT Secret Key - CHANGE THIS TO A RANDOM STRING!
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_123456789

# JWT Token Expiration (in seconds)
# 86400 = 24 hours
# 604800 = 7 days
JWT_EXPIRATION=86400

# ========================================
# FLASK CONFIGURATION
# ========================================

# Flask Environment (development or production)
FLASK_ENV=development

# Flask Debug Mode (True or False)
FLASK_DEBUG=True

# Flask Secret Key (for sessions)
SECRET_KEY=CHANGE_THIS_SECRET_KEY_AS_WELL

# Flask Host
FLASK_HOST=0.0.0.0

# Flask Port
FLASK_PORT=5000

# ========================================
# CORS CONFIGURATION
# ========================================

# Allowed Origins (comma-separated)
# For development: http://localhost:3000,http://127.0.0.1:5500
# For production: https://elcorreveidile.github.io
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:5500,http://localhost:5500,https://elcorreveidile.github.io

# ========================================
# ADMIN CONFIGURATION
# ========================================

# Admin/Professor Password (hashed with bcrypt)
# Generate with: python -c "import bcrypt; print(bcrypt.hashpw(b'ugr2024', bcrypt.gensalt()).decode())"
ADMIN_PASSWORD_HASH=$2b$12$EXAMPLE_HASH_REPLACE_THIS

# Admin Email (for notifications)
ADMIN_EMAIL=profesor@ugr.es

# ========================================
# SESSION CONFIGURATION
# ========================================

# QR Code Session Duration (in seconds)
# 300 = 5 minutes
QR_SESSION_DURATION=300

# ========================================
# OPTIONAL: EMAIL CONFIGURATION
# ========================================

# SMTP Server for sending emails
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@ugr.es

# ========================================
# NOTES
# ========================================
# 1. Copy this file to .env and fill in your actual values
# 2. NEVER commit .env to git (it's in .gitignore)
# 3. Keep your secrets secure!
